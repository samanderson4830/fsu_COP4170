<style>
    body {
        margin: 0;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1454117096348-e4abbeba002c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
</style>
<h1>{{ title }}</h1>
{{#if user_cart }}
<div class="cart page">
    <ul class="list-group">
        {{#each user_cart }}
        <li class="list-group-item clearfix">
            <div class="col-xs-5">
                <strong> {{ product_name }} </strong><br />
            </div>
            <div class="col-xs-2 text-right">
                <button type="button" class="btn btn-danger rounded-circle" id="btnMinus"><i data-feather="minus"></i>-</button>
                <span class="badge"> {{ amount }} </span>
                <button type="button" class="btn btn-success rounded-circle" id="btnPlus"><i data-feather="plus"></i>+</button>
            </div>
            <div class="col-xs-3 text-right">
                $ {{ price }}
            </div>
            <div class="col-xs-2 text-right">
                <a href="/remove-from-cart/{{ product_ID }}" class="btn btn-danger"></i> Remove </a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="text-right">

    <strong>Total: $ {{ cost }} </strong>

</div>
<hr>
<div class="text-right">
    <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
</div>

{{else }}
Your shopping cart is empty.
{{/if}}