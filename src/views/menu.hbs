<h1>{{title}}</h1>

{{#each products }}
<div class="column">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="https://cdn.pixabay.com/photo/2016/04/24/22/30/monitor-1350918_960_720.png" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ product_name }}</h3>
                <p class="description">{{ product_description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">$ {{ price }}</div>
                    <a href="#" class="btn btn-success pull-right" role="button">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}


